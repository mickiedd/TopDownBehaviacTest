<?xml version="1.0" encoding="utf-8"?>
<!--
  PenguinWanderTree.xml
  Behaviac behavior tree for ABehaviacPenguin / BP_Penguin.

  Behavior cycle (loops forever via DecoratorLoop Count=-1):
    1. PickWanderTarget    — pick a random reachable point near spawn
    2. MoveToWanderTarget  — walk there (Running until arrived, then Success)
    3. StopMovement        — halt navigation cleanly
    4. Wait 1.5 s          — pause at destination before looking around
    5. LookAround          — smoothly rotate to random yaw (Running until within 2°)
    6. Wait 3.0 s          — rest period before the next wander

  Import this file into the Unreal Editor Content Browser
  (drag-and-drop or Import) to create a UBehaviacBehaviorTree asset.
  Then assign that asset to BP_Penguin → Details → Behaviac AI → Behavior Tree.
-->
<behavior version="1" agenttype="ABehaviacPenguin">

    <!--
      DecoratorLoop (Count=-1): wraps the whole sequence so the penguin
      keeps wandering indefinitely.  The Sequence child is reset after
      each completed cycle.
    -->
    <node class="DecoratorLoop">
        <property name="Count" value="-1"/>

        <!--
          Sequence: executes children left-to-right in order.
          Fails immediately if any child fails; succeeds when all succeed.
        -->
        <node class="Sequence">

            <!-- Step 1: choose a new random destination -->
            <node class="Action">
                <property name="Method" value="PickWanderTarget"/>
            </node>

            <!-- Step 2: navigate to the destination -->
            <!-- Returns Running each tick until arrived, then Success -->
            <node class="Action">
                <property name="Method" value="MoveToWanderTarget"/>
            </node>

            <!-- Step 3: stop navigation cleanly -->
            <node class="Action">
                <property name="Method" value="StopMovement"/>
            </node>

            <!-- Step 4: short pause at the destination (1.5 s) -->
            <node class="Wait">
                <property name="Time" value="1.5"/>
            </node>

            <!-- Step 5: look around curiously (smooth yaw interpolation via TurnInterpSpeed) -->
            <!-- Returns Running until the turn is within 2°, then Success -->
            <node class="Action">
                <property name="Method" value="LookAround"/>
            </node>

            <!-- Step 6: rest for 3 s before the next wander -->
            <node class="Wait">
                <property name="Time" value="3.0"/>
            </node>

        </node>
        <!-- end Sequence -->

    </node>
    <!-- end DecoratorLoop -->

</behavior>
